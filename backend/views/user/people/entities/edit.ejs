<div>
    <form action="/user/entities/<%= entity._id %>/edit" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name: </label>
            <input type="text" class="form-control" id="name" name="name" value="<%= entity.name %>">
        </div>

        <div class="mb-3">
            <div class="form-label">Email: <%= entity.email %></div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description: </label>
            <textarea name="description" class="form-control" id="description" cols="30" rows="10"><%= entity.description %></textarea>
        </div>

        <!-- imagem -->

        <button class="btn btn-warning">Change</button>
    </form>
</div>

